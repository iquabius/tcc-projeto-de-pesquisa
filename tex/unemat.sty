	\MakeUppercase{\bfseries\normalsize\imprimirautor}

	\vspace*{\fill}\vspace*{\fill}\vspace*{\fill}\vspace{0.5cm}

	\begin{center}
	\MakeUppercase{\bfseries\normalsize\imprimirtitulo}
	\end{center}

	\vspace*{3cm}

	\abntex@ifnotempty{\imprimirpreambulo}
	{
	  \hspace{.45\textwidth}
	  \begin{minipage}{.5\textwidth}
	  \SingleSpacing
	  \imprimirpreambulo
	  \end{minipage}
	  \vspace*{\fill}
	}

	\MakeUppercase{\bfseries\normalsize\imprimirlocal}

	\MakeUppercase{\bfseries\normalsize\imprimirdata}

	\end{center}
}

